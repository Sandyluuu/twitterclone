<p style="color: green"><%= notice %></p>

<h3>Search Results for "<%= @query %>"</h3>

<% @tweets.each do |tweet| %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= tweet.userName %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= tweet.description %></h6>
        <button type="button" class="btn btn-info"><%= link_to "Show this tweet", tweet %></button>
        <button type="button" class="btn btn-info"><%= link_to "New tweet", tweet %></button>
      </div>
    </div>
    <br>
     <%= link_to "Back to tweets", tweets_path %>
  <% end %>
